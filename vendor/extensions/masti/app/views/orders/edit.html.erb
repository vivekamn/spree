<% @body_id = 'cart' %>
<%= error_messages_for :order  %>

<div class="bannerouter">
  <div class="shoppingout1">
    <% if @order.gift? %>
      <div>
        <h1>I Would Like to Gift!</h1>
        <div id="Gtext">
          Give the Name, Email and Phone No. of the person to whom you want to gift and update. Don't worry the voucher only has the retail value on it, so gift away..
        </div>
      </div>
    <% else %> 
      <div class="shoppinginner"><img src="/images/iworuld.gif" width="303" height="41" />
      </div>
    <% end %>
    <div class="shoppinginner">
      <div class="shoptable" style="padding:0px">
        <% form_for(@order, :url => object_url, :html => { :method => :put, :id => 'updatecart' }) do |order_form| %>
          <% hook :inside_cart_form do %>
            <% hook :cart_items do %>
              <%= render :partial => 'form', :locals => {:order_form => order_form} %>
            <% end %>
            <% unless @order.line_items.empty? -%>
              <div id="subtotal" align="right">
                <h2><%= "#{t("total")}: Rs.  #{order_price(@order).to_i}" %></h2>   
              </div>
            <% end -%>  
          <% end %>
        <% end -%>
      </div>
    </div>
  </div>
</div>

