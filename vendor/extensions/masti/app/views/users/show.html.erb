<style>
	h1{
		color:#00A0F6;
	}
	h2{
		color:#363636;
		font-family:Verdana,Geneva,sans-serif;
		font-size:14px;
		font-weight:bold;
		
	}
	h3{
		color:#848484;
		font-family:Verdana,Geneva,sans-serif;
		font-size:11px;
		line-height:21px;
		font-weight:normal;
	}
	.tes{
		-moz-border-radius-bottomleft:0.5em;
		-moz-border-radius-bottomright:0.5em;
		-moz-border-radius-topleft:0.5em;
		-moz-border-radius-topright:0.5em;
	}
</style>
<table width="97%" style="margin-bottom: 10px; margin-left: 20px;margin-top: 20px;margin-right:20px;float:left;border:0px;">
	<tr>
		<td>
			<h1>My Account</h1>
		</td>
	</tr>
	<tr >
		<td>
			<img src="/images/bg1.gif" />
			<%# image_tag "bg1.gif",:border=>"0px", :alt => 'Peek-A-Boo Patterns',:width=>"250px"%>
		</td>
	</tr>
</table>
<table class="tes" style="margin-left: 30px;width:880px;border-top:1px solid #ABABAB;border-left:1px solid #ABABAB;border-right:1px solid #ABABAB;border-bottom:1px solid #ABABAB;float:left;" width="95%"  border="0" cellpadding="0" cellspacing="10" align="center" >
       <tr>
           <td colspan='2' width="100%">
			<% hook :account_summary do %>
			<table>
			  <tr>
			    <td><%= t("email") %>:</td>
			    <td>
			      <%= @user.email %>
			    </td>
			  </tr>
			</table>
			<p><%= link_to t('edit'), edit_object_url %></p>
			
			<% end %>	
		</td>
	</tr>
</table>
<table><tr><td height="10px"></td></tr></table>

<table width="97%" style="margin-bottom: 10px; margin-left: 20px;margin-top: 20px;margin-right:20px;float:left;border:0px;">
	<tr>
		<td>
			<h1><%= t("my_orders") %></h1>
		</td>
		<td align="right">
			<% if admin?%>
				<%=link_to "View all Orders","/admin/orders" %>
			<%end%>
		</td>
	</tr>
	<tr >
		<td colspan="2">
			<img src="/images/bg1.gif" />
			<%# image_tag "bg1.gif",:border=>"0px", :alt => 'Peek-A-Boo Patterns',:width=>"250px"%>
		</td>
	</tr>
</table>
<table class="tes" style="margin-bottom:10px;margin-left: 30px;align:center;width:880px;border-top:1px solid #ABABAB;border-left:1px solid #ABABAB;border-right:1px solid #ABABAB;border-bottom:1px solid #ABABAB;float:left;" width="95%"  border="0" cellpadding="0" cellspacing="10" align="center" >

       <tr>
           <td colspan='2' width="100%" align="center">
			<% hook :account_my_orders do %>
			<table class="order-summary" width="800px" border="1" style="margin-left:10px" cellpadding="0" cellspacing="0">
			  <thead>
			    <tr>
			      <th>Product Name</th>
			      <th>Ordered Date</th>
			      <th>Status</th>
			      <th>Quantity</th>
			      <th>Prize</th>
			      <th>Total</th>
				  <th></th>
			    </tr>
			  </thead>
			  <tbody>
			  <% @orders.each do |order| %>
			  <% order.line_items.each do |item| %>
			    <tr class="<%= cycle('even', 'odd') %>">
			      <td><%= item.variant.product.name %></td>
			      <td><%=order.created_at.to_date%></td>
			      <td><%= t(order.state).titleize %></td>
			      <td><%=item.quantity-%></td>
				  <td>Rs <%=item.price-%></td>
			      <td>Rs <%= order.total %></td>
				  <td><a href="/voucher?id=<%=order.id%>">View Voucher</a></td>
				  <%end%>
			    </tr>
			  <% end %>
			  </tbody>
			</table>
			 
			<br />
			
			<% end %>
		</td>
	</tr>
</table>
<table style="margin-top:20px;"><tr height="10px"></tr><td><div style="height:10px;"></div></td></table>





