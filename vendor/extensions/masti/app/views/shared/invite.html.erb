<script type="text/javascript">
	function email_check(giv_email){
        var EMAIL_REGEX = /^([^@\s]+)@((?:[-a-z0-9]+\.)+[a-z]{2,})$/i;
        email_value = EMAIL_REGEX.test(giv_email);
        return email_value;
    }
	function validate_verification(){
    var email = document.getElementById('email').value;
	document.getElementById('flash_error').style.display = 'none'
	 if(document.getElementById('email').value != '' && document.getElementById('email').value  != null && email_check(email)){
	 	document.getElementById('uniq_url').submit();
	 } else{
	 	document.getElementById('flash_error').style.display = '';
          document.getElementById('flash_error').innerHTML = "Invalid Email id.";
	 }
	}
</script>
