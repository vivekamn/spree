<script>
    function adjustNotes(){
        var default_notes_top = 160;
        var default_screen_width = 935;
        var home_coordinates = getElementOffsetScrollable(document.getElementById("home_menu"));
        var pageY;
        if (typeof(window.pageYOffset) == 'number') {
            pageY = window.pageYOffset;
        }
        else {
            pageY = document.documentElement.scrollTop;
        }
        
        if (pageY > 70) 
            default_notes_top = 0;
        
        if (document.getElementById("notes_div")) {
            document.getElementById("notes_div").style.top = default_notes_top + "px";
            document.getElementById("notes_div").style.left = default_screen_width + home_coordinates.left + "px";
            
        }
    }
    
    window.onscroll = adjustNotes;
    window.onload = adjustNotes;
    window.onresize = adjustNotes;
</script>
