<div class="toplogo">
  <div class="logopart"><img src="/images/logo.gif" width="305" height="71" /></div>
  <div class="logoright">
    <% if current_user %>
      <div class="loggedinpart">
        <div class="fl username">Logged in as <%= current_user.email %></div>
        <div class="fl username"><%= link_to 'Account', user_path(current_user) %></div>
        <div class="fl username"><%= link_to 'Logout', logout_path %></div>
      </div>
    <% else %>
      <div class="join"><%= link_to "<img src='/images/join.gif' width='239' height='25' border='0' />", signup_path %></div>
      <% form_tag user_session_path do  %>
        <div class="submitpart"> 
          <div class="fl username">User Name :</div>
          <div class="fl pt6"><%= text_field :user_session, 'login', :class => 'textfield' %></div>
          <div class="fl username">Password :</div>
          <div class="fl pt6"><%= password_field :user_session, 'password', :class => 'textfield' %></div>
          <div class="fl submit"><%= image_submit_tag 'submit.gif', :width=>"60", :height=>"25" %></div>
        </div>
      <% end %>
    <% end %>
    <div class="emailpart">
  <%form_for :deals_notification , :url => {:controller => "home" ,:action => "email_deal_notify"} ,:html => {:id => "deals_notification"} do |f|%>
      <div class="fl"><img src="/images/email.gif" width="239" height="25" /></div>
      <div class="w190"><%=f.text_field :email,:class=>"textfield1",:onkeypress=>"submitForm_on_enter(event,'deals_notification')" %><br/>
	  <div class="errormesg" id="error_email" style="color:red;"></div>
	  </div>
      <div class="fl"><%= image_submit_tag "go.gif",:border=>0,:onclick=>"return email_validate_head();" %></div>
	<%end%>    
	</div>
  </div>
</div>
<div class="navouter">
  <div class="fl"><img src="/images/leftcurve.gif" width="5" height="47" /></div>
  <div class="navinner">
    <div class="navleft"><a href="<%= home_path%>"><img src="images/deal.gif" width="71" height="23" border="0" id="Image1" onmouseover="MM_swapImage('Image1','','images/dealon.gif',1)" onmouseout="MM_swapImgRestore()"/></a></div>
    <div class="navleft"><a href="<%= how_masti_works_path%>"><img src="images/how.gif" width="184" height="23" border="0" id="Image2" onmouseover="MM_swapImage('Image2','','images/howon.gif',1)" onmouseout="MM_swapImgRestore()"/></a></div>
    <div class="navleft1"><a href="<%= get_featured_path %>"><img src="images/get.gif" width="104" height="23" border="0" id="Image3" onmouseover="MM_swapImage('Image3','','images/geton.gif',1)" onmouseout="MM_swapImgRestore()"/></a> </div>
  </div>
  <div class="fl"><img src="/images/rightcurve.gif" width="5" height="47" /></div>
</div>

