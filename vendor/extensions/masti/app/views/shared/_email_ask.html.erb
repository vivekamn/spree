<script type="text/javascript">
    
    function clear_email(){
        document.getElementById('email_ask_email').value = "";
    }
    
    function load_email(){
        if (document.getElementById('email_ask_email').value == "") {
            document.getElementById('email_ask_email').value = "E-mail id";
        }
    }
    
    function email_validate_head(){
        var EMAIL_REGEX = /^([^@\s]+)@((?:[-a-z0-9]+\.)+[a-z]{2,})$/i;
        var flag_em = true;
        var email_name = document.getElementById('email_ask_email').value;
        var error_msg_div = document.getElementById('error_email_ask');
        if (email_name != '') {
            if (email_name.length != 0) {
                email_my = new String(email_name);
                email_my = email_my.trim();
                email_value = EMAIL_REGEX.test(email_my);
                if (email_value != 1) {
                    error_msg_div.innerHTML = "Please enter valid E-mail";
                    flag_em = false;
                }
            }
            else {
                error_msg_div.innerHTML = "Please enter valid E-mail";
                flag_em = false;
            }
        }
        else {
            error_msg_div.innerHTML = "Please enter valid E-mail";
            flag_em = false;
        }
        
        return flag_em;
        
    }
    
</script>
