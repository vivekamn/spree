<script>
    
    function email_check(giv_email){
        //alert(giv_email + 'email check given email');
        var EMAIL_REGEX = /^([^@\s]+)@((?:[-a-z0-9]+\.)+[a-z]{2,})$/i;
        email_value = EMAIL_REGEX.test(giv_email);
        //alert(email_value + 'return value in email check');
        return email_value;
    }
    
    function phone_no_check(giv_number){
        //alert(giv_number + 'phone no from phone check');
        var PHONE_REGEX = /^[0-9]+$/;
        phone_value = PHONE_REGEX.test(new String(giv_number));
        //alert(phone_value + 'return value in phone check');
        return phone_value;
    }
    
    function website_check(giv_website){
        //alert(giv_website + 'website address for website check');
        var WEBSITE_REGEX = /^([a-z0-9_-]+\.)*[a-z0-9_-]+(\.[a-z]{2,6}){1,2}$/;
        
        website_value = WEBSITE_REGEX.test(giv_website);
        //alert(website_value + 'return value in website check');
        return website_value;
        
    }
    
    function url_check(giv_url){
        //alert(giv_url + 'url for websire url check');
        var URL_REGEX = /^(https?|ftp):\/\/.*$/i;
        url_value = URL_REGEX.test(giv_url);
        // alert(url_value + ' return valid in url check');
        return url_value;
    }
    
    function website_name_check(giv_name){
        //alert(giv_name + "name for name chekc");
        var NAME_REGEX = /^[A-Za-z0-9 ]{3,35}$/;
        website_name_value = NAME_REGEX.test(giv_name);
        //alert(website_name_value + "return valid in name check");
        return website_name_value;
    }
    
    function string_check(giv_str){
        //alert(giv_str + " ==string for string check");
        var STRING_REGEX = /^[A-Za-z ]{3,35}$/;
        string_value = STRING_REGEX.test(giv_str);
        //alert(string_value + "   ==return valid in strint check");
        return string_value;
        
    }
    
    function on_affliate_validation(){
        //alert('hi==========');
        var site_name = document.getElementById('affliate_enquiry_site_name').value;
        var site_url = document.getElementById('affliate_enquiry_site_url').value;
        var name = document.getElementById('affliate_enquiry_name').value;
        var email = document.getElementById('affliate_enquiry_email').value;
        var phone_no = document.getElementById('affliate_enquiry_phone_no').value;
        var flag = true;
        //alert(site_name + " : site name===" + site_url + " :site url===" + name + " :name=====" + email + " :email======" + phone_no + " : phone no --------");
        
        if (site_name == null || site_name == '') {
            document.getElementById('error_site_name').innerHTML = "Invalid Website name";
            flag = false;
        }
        else {
            val_site_name = website_name_check(site_name);
            if (val_site_name == true) {
                document.getElementById('error_site_name').innerHTML = "";
            }
            else {
                document.getElementById('error_site_name').innerHTML = "Invalid Website name";
                flag = false;
            }
            
        }
        
        if (site_url == null || site_url == '') {
            document.getElementById('error_site_url').innerHTML = "Invalid Website url";
            flag = false;
        }
        else {
            val_site_h_url = url_check(site_url);
            val_site_wh_url = website_check(site_url);
            if (val_site_h_url == true || val_site_wh_url == true) {
                document.getElementById('error_site_url').innerHTML = "";
            }
            else {
                document.getElementById('error_site_url').innerHTML = "Invalid Website url";
                flag = false;
            }
        }
        
        if (name == null || name == '') {
            document.getElementById('error_name').innerHTML = "Invalid Name";
            flag = false;
        }
        else {
            val_name = string_check(name);
            if (val_name == true) {
                document.getElementById('error_name').innerHTML = "";
            }
            else {
                document.getElementById('error_name').innerHTML = "Invalid Name";
                flag = false;
            }
        }
        
        if (email == null || email == '') {
            document.getElementById('error_email_field').innerHTML = "Invalid Emailid";
            flag = false;
        }
        else {
            val_email = email_check(email);
            if (val_email == true) {
                document.getElementById('error_email_field').innerHTML = "";
            }
            else {
                document.getElementById('error_email_field').innerHTML = "Invalid Emailid";
                flag = false;
            }
        }
        if (phone_no == null || phone_no == '') {
            document.getElementById('error_phone_no').innerHTML = "Invalid Phone no";
            flag = false;
        }
        else {
            if (phone_no.length > 4 && phone_no.length < 13) {
                val_phone_no = phone_no_check(phone_no);
                if (val_phone_no == true) {
                    document.getElementById('error_phone_no').innerHTML = "";
                }
                else {
                    document.getElementById('error_phone_no').innerHTML = "Invalid Phone no";
                    flag = false;
                }
            }
            else {
                document.getElementById('error_phone_no').innerHTML = "Invalid Phone no";
                flag = false;
            }
            
        }
        
        if (flag == true) {
            return true;
        }
        else {
            return false;
        }
    }
</script>
