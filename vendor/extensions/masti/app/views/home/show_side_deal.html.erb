<%unless side_deal_product.nil? %>
<table>
    <tr>
        <td>
            <% if deal_info == 'side_deal' %>
            <span style="font-family:Tahoma, Geneva, sans-serif; font-size:14px; color:#6cab16; font-weight:bold;">Today's</span>
            <span style="font-family:Tahoma, Geneva, sans-serif; font-size:14px; color:#214d76; font-weight:bold;">Side Deal</span>
            <%else %>
            <span style="font-family:Tahoma, Geneva, sans-serif; font-size:14px; color:#6cab16; font-weight:bold;">Today's</span>
            <span style="font-family:Tahoma, Geneva, sans-serif; font-size:14px; color:#214d76; font-weight:bold;">Deal</span>
            <%end %>
        </td>
    </tr>
    <tr>
        <td background="blue" align="center">
            <%= image_tag(side_deal_product.images.first.attachment.url(:product),:alt=> side_deal_product.name,:style=>"margin-left:2px;margin-top:2px;width: 150px;height:90px;") %>
        </td>
    </tr>
    <tr>
        <td>
            <span style="font-family:Tahoma, Geneva, sans-serif; font-size:12px; color:#214d76; font-weight:bold;"><%= side_deal_product.side_deal_title %></span>
        </td>
    </tr>
    <tr>
        <td width="100%">
        	<% unless side_deal_product.id == 1060500648 %>
            <table width="100%">
                <tr>
                    <td>
                        <span style="font-family:Tahoma, Geneva, sans-serif; font-size:12px; color:#6cab16; font-weight:bold;">Value </span>
                    </td>
                    <td>
                        <span style="font-family:Tahoma, Geneva, sans-serif; font-size:12px; color:#6cab16; font-weight:bold;">: </span>
                    </td>
                    <td>
                        <span style="font-family:Tahoma, Geneva, sans-serif; font-size:12px; color:#214d76; font-weight:bold;"><%= side_deal_product.price.to_i %></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <span style="font-family:Tahoma, Geneva, sans-serif; font-size:12px; color:#6cab16; font-weight:bold;">Discount </span>
                    </td>
                    <td>
                        <span style="font-family:Tahoma, Geneva, sans-serif; font-size:12px; color:#6cab16; font-weight:bold;">: </span>
                    </td>
                    <td>
                        <span style="font-family:Tahoma, Geneva, sans-serif; font-size:12px; color:#214d76; font-weight:bold;"><%= side_deal_product.discount %>%</span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <span style="font-family:Tahoma, Geneva, sans-serif; font-size:12px; color:#6cab16; font-weight:bold;">You Save </span>
                    </td>
                    <td>
                        <span style="font-family:Tahoma, Geneva, sans-serif; font-size:12px; color:#6cab16; font-weight:bold;">: </span>
                    </td>
                    <td>
                        <span style="font-family:Tahoma, Geneva, sans-serif; font-size:12px; color:#214d76; font-weight:bold;"><%= ((side_deal_product.price.to_i * side_deal_product.discount)/100).to_i %></span>
                    </td>
                </tr>
            </table>
			<%end%>
        </td>
    </tr>
</table>
<%end%>