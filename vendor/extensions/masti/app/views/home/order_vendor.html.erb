<div class="bannerouter">
  <div class="shoppingout1">
  	<table width="100%" style="margin-bottom: 50px;">
  		<tr valign="top" height="90px">
  			<td width="12%">
  				<strong>Product Name</strong>
  			</td>
			<td>
				:
			</td>
			<td style="padding-left:4px;">
				<%= @variant.product.name%><br/><br/>
				<%= link_to 'Please Click here for Offer Details.', "/home/product_preview/#{@variant.product.permalink}" %>
			</td>
  		</tr>
		<tr valign="top">
  			<td width="12%">
  				<strong>Vendor Details</strong>
  			</td>
			<td>
				:
			</td>
			<td style="padding-left:4px;">
				<table border="0" width="100%" cellspacing="0" cellpadding="0">
				  <%unless @variant.product.vendor.nil?%>
                  <tr>
                    <td align="left" valign="top" colspan="2">
                    	
							<%=@variant.product.vendor.name%><br>
						<%unless @variant.product.vendor.address.nil?%>
                          	<%= @variant.product.vendor.address %>
						<%end%>
					  </td>
                  </tr>
                  <tr>
                    <td align="left" valign="top" colspan="2">Contact : <%= @variant.product.vendor.phone_no %></td>
                  </tr>
				  <%end%>
                </table>
			</td>
  		</tr>
  	</table>
	
	<table border="1" width="100%" style="margin-bottom: 50px;">
		<tr>
			<th>NO</th>
			<th>Voucher Code</th>
			<th>Quantity</th>
			<th>Name</th>
			<th>Address</th>
			<th>City</th>
			<th>State</th>
			<th>E-mail</th>
			<th>Mobile No</th>
		</tr>
		<% count = 1 %>
		<% @orders.each do |order|%>
		<tr align="center">
			<td><%= count %></td>
			<td><%= order.number %></td>
			<td><%= order.line_items[0].quantity %></td>
			<td><%= order.checkout.bill_address.name %></td>
			<td><%= order.checkout.bill_address.address1 %></td>
			<td><%= order.checkout.bill_address.city %> - <%= order.checkout.bill_address.zipcode %></td>
			<td>Tamil Nadu</td>
			<td><%= order.user.email %></td>
			<td><%= order.user.phone_no %></td>		
		</tr>
		<%count += 1%>
		<%end%>
</table>
<table width="100%" style="margin-bottom: 120px;">
	<tr>
		<td style="font-size:15px;">
			<strong>Note :</strong> Please contact <span style='color:#9ED534;'><strong>Geetha @</strong></span> <span style='color:#1876A7;'><strong>43300051</strong></span> for further assistance.
		</td>
	</tr>
</table>
